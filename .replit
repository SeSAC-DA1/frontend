modules = ["python-3.11", "postgresql-16", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0", "python_database:1.0.0", "web_scraper:1.0.0", "javascript_auth_all_persistance:1.0.0", "python_gemini:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CarFin Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "File Download Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CarFin Modern UI"

[[workflows.workflow]]
name = "CarFin Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn simple_main:app --host 0.0.0.0 --port 8000 --log-level info"
waitForPort = 8000

[[workflows.workflow]]
name = "File Download Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python file_server.py"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "CarFin Modern UI"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd carfin-ui && npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
